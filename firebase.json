{
  "hosting": {
    "public": "website/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    
    "appAssociation": "AUTO",

    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      { "source": "/**", "dynamicLinks": true }
    ]
    
  }
}
